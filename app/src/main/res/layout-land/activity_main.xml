<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primaryColor"/>

    <LinearLayout
        android:id="@+id/layoutFrom"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toTopOf="@id/ToText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toLeftOf="@id/table"
        app:layout_constraintTop_toBottomOf="@id/my_toolbar">

        <Spinner
            android:id="@+id/inputSpinner"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/spinner1"
            app:layout_constraintRight_toLeftOf="@id/result" />

        <TextView
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/textview1"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@id/inputSpinner" />
    </LinearLayout>

    <TextView
        android:id="@+id/ToText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/to"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@id/layout1"
        app:layout_constraintTop_toBottomOf="@id/layoutFrom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/table"
        />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ToText"
        app:layout_constraintRight_toLeftOf="@id/table">

        <Spinner
            android:id="@+id/resultSpin"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toLeftOf="@id/result"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/textview1"
            android:textSize="30sp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            app:layout_constraintLeft_toRightOf="@id/resultSpin"
            />
    </LinearLayout>

    <TableLayout
        android:id="@+id/table"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/my_toolbar"
        app:layout_constraintLeft_toRightOf="@id/layout1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:stretchColumns="0,1,2"
        >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:text="7"
                android:onClick="keyboardInput"
                android:textSize="40sp"
                android:id="@+id/num7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:text="8"
                android:onClick="keyboardInput"
                android:textSize="40sp"
                android:id="@+id/num8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="9"
                android:onClick="keyboardInput"
                android:textSize="40sp"
                android:id="@+id/num9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <Button
                android:text="4"
                android:onClick="keyboardInput"
                android:textSize="40sp"
                android:id="@+id/num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="5"
                android:onClick="keyboardInput"
                android:textSize="40sp"
                android:id="@+id/num5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="6"
                android:onClick="keyboardInput"
                android:textSize="40sp"
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <Button
                android:text="1"
                android:onClick="keyboardInput"
                android:textSize="40sp"
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="2"
                android:onClick="keyboardInput"
                android:textSize="40sp"
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="3"
                android:onClick="keyboardInput"
                android:textSize="40sp"
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <Button
                android:text="."
                android:onClick="keyboardInput"
                android:textSize="40sp"
                android:id="@+id/numdot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="0"
                android:onClick="keyboardInput"
                android:textSize="40sp"
                android:id="@+id/num0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:text="\u2190"
                android:onClick="keyboardInput"
                android:textSize="40sp"
                android:id="@+id/backspace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>